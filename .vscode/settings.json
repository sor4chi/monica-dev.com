{
  "markdown.copyFiles.destination": {
    "/apps/portfolio/src/content/blogs/**/*": "/apps/portfolio/public/assets/blogs/${documentBaseName}/",
    "/apps/portfolio/src/content/works/**/*": "/apps/portfolio/public/assets/works/${documentBaseName}/"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "editor.codeActionsOnSave": {
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "biome.enabled": true,
  "prettier.enable": false,
  "eslint.enable": false,
  "[astro]": {
    "editor.defaultFormatter": "astro-build.astro-vscode"
  }
}
