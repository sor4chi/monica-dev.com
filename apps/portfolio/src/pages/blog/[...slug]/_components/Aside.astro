---
import { clsx } from "clsx";

import { styles } from "./Aside.css";

interface Props {
  position?: "left" | "right";
}

const { position } = Astro.props;
---

<aside
  class={clsx(
    styles.aside,
    position === "left" && styles.left,
    position === "right" && styles.right,
  )}
>
  <slot />
</aside>
