---
import Share from "@/components/document/Share.astro";
import Toc from "@/components/document/Toc.astro";
import Line from "@/components/ui/Line.astro";

import { styles } from "./Left.css";

import type { MarkdownHeading } from "astro";

interface Props {
  shareTitle: string;
  headings: MarkdownHeading[];
  source: string;
}

const { headings, shareTitle, source } = Astro.props;
---

<div class={styles.container}>
  <Toc headings={headings} />
  <div class={styles.notPC}>
    <Line />
    <Share
      title={shareTitle}
      pathname={Astro.url.pathname}
      source={source}
      flex
    />
  </div>
</div>
