---
import BaseLayout from "@/components/layouts/Base.astro";
import Line from "@/components/ui/Line.astro";
import NameCard from "./_components/NameCard.astro";
import * as Profile from "@/content/profile/introduce.md";
import MdContents from "@/components/document/MdContents.astro";
import Container from "./_components/Container.astro";
---

<BaseLayout canonical="/">
  <Container>
    <NameCard
      title={Profile.frontmatter.title}
      subtitle={Profile.frontmatter.subtitle}
      socials={Profile.frontmatter.socials}
    />
    <Line />
    <MdContents>
      <Profile.Content />
    </MdContents>
  </Container>
</BaseLayout>
