---
import { styles } from "./Item.css";
import { Image } from "astro:assets";

interface Props {
  slug: string;
  title: string;
  date: Date;
  icon?: string;
  link: string;
}

const { slug, title, date, icon, link } = Astro.props;
---

<tr>
  <td class={styles.dateCol}>
    <time datetime={date.toISOString()} class={styles.date}>
      {
        date.toLocaleDateString("en-US", {
          year: "numeric",
          month: "short",
        })
      }
    </time>
  </td>
  <td class={styles.iconCol}>
    <a href={link} target="_blank" rel="noopener noreferrer">
      {
        icon ? (
          <Image
            width={120}
            height={63}
            src={icon}
            alt={title}
            transition:name={`works-hero-${slug}`}
            class={styles.icon}
          />
        ) : (
          <span class={styles.icon}>
            <span class={styles.dot} />
          </span>
        )
      }
    </a>
  </td>
  <td>
    <h2 class={styles.title}>{title}</h2>
    <slot />
  </td>
</tr>
