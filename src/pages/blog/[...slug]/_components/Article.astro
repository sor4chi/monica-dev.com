---
import Link from "@/components/ui/Link.astro";
import { styles } from "./Article.css";
import { Image } from "astro:assets";
import "katex/dist/katex.css";
import Share from "@/components/document/Share.astro";

interface Props {
  title: string;
  slug: string;
  publishedAt: Date;
  updatedAt?: Date;
}

const { title, slug, publishedAt, updatedAt } = Astro.props;

const formatDateTime = (date: Date) => {
  return date.toLocaleDateString("en-US", {
    day: "numeric",
    month: "short",
    year: "numeric",
  });
};

const getArticleSourceUrl = (slug: string) => {
  return `https://github.com/sor4chi/monica-dev.com/tree/main/src/content/originalBlogs/${slug}.md`;
};
---

<article id="article" class={styles.article}>
  <span class={styles.backLink}>
    <Link href="/blog">‚Üê Back</Link>
  </span>
  <div class={styles.header}>
    <div>
      <h1 class={styles.title}>{title}</h1>
      <p class={styles.meta}>
        <time datetime={publishedAt.toISOString()} class={styles.date}>
          {formatDateTime(publishedAt)}
        </time>
        {
          updatedAt && (
            <>
              <span>/</span>
              <time datetime={updatedAt.toISOString()} class={styles.date}>
                {formatDateTime(updatedAt)}
              </time>
            </>
          )
        }
      </p>
    </div>
    <Share
      title={`${title} | Works - Monica's Portfolio`}
      url={Astro.url.toString()}
      source={getArticleSourceUrl(slug)}
    />
  </div>
  <slot />
</article>

<script>
  const initTwitterEmbed = () => {
    const embeds = document.querySelectorAll(".twitter-tweet");
    const isDark = document.documentElement.classList.contains("dark");
    const theme = isDark ? "dark" : "light";
    embeds.forEach((embed) => {
      embed.setAttribute("data-theme", theme);
    });
  };

  initTwitterEmbed();

  document.addEventListener("astro:after-swap", () => {
    initTwitterEmbed();
  });
</script>
