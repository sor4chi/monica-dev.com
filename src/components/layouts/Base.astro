---
import "@/styles/global.css";
import { ViewTransitions } from "astro:transitions";
import { styles } from "./Base.css";
import Navigation from "./Navigation.astro";
import RightTopArea from "./RightTopArea.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
const SITE_NAME = "Monica's Portfolio";
const SITE_DESCRIPTION =
  "Webエンジニア Monica のポートフォリオサイトです。経歴やスキル、制作物などを掲載しています。";

const getTitle = (title?: string) => {
  if (title) {
    return `${title} | ${SITE_NAME}`;
  }
  return SITE_NAME;
};

const getOgImage = (title?: string) => {
  return `https://res.cloudinary.com/dj8lujsue/image/upload/l_text:Sawarabi%20Gothic_72_bold:${
    title || "Monica's Portfolio"
  },co_rgb:fff,w_1000,c_fit/v1638148802/ogp.png`;
};
---

<html lang="ja" class="light">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{getTitle(title)}</title>
    <meta name="description" content={description || SITE_DESCRIPTION} />

    <meta property="og:title" content={getTitle(title)} />
    <meta property="og:description" content={description || SITE_DESCRIPTION} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://monica-dev.com/" />
    <meta property="og:image" content={getOgImage(title)} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@monica18_pr" />
    <meta name="twitter:creator" content="@monica18_pr" />
    <meta name="twitter:title" content={getTitle(title)} />
    <meta
      name="twitter:description"
      content={description || SITE_DESCRIPTION}
    />
    <meta name="twitter:image" content={getOgImage(title)} />

    <meta name="robots" content="noindex" />
    <script src="/scripts/theme.js" is:inline></script>
    <ViewTransitions />
  </head>
  <body>
    <RightTopArea />
    <main class={styles.container}>
      <slot />
    </main>
    <Navigation />
  </body>
</html>
